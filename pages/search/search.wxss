/* pages/search/search.wxss */
.index-sou{
  width: 590rpx;
  margin: 35rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
  background: #f2f2f2;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  position: relative;
}
.index-sou-icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right:27rpx;
}
.index-sou-text{
  height: 60rpx;
  line-height:60rpx;
  width: 85%;
}
.search-top{
  border-top: 1px solid #f2f2f2;
  border-bottom: 1px solid #f2f2f2;
}
.search-top view{
  width: 33.3%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 28rpx;
}
.search-top view:nth-child(2){
  border-left: 1px solid #f2f2f2;
  border-right: 1px solid #f2f2f2;
  box-sizing: border-box;
}

/*商品列表  */
.index-shop-banner{
  width: 100%;
  height: 240rpx;
  margin-top: 20rpx;
  position: relative;
}
.index-shop-banner image{
  width: 100%;
  height: 100%;
}
.index-shop-banner-text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  padding: 33rpx;
  background: #fff;
  font-size: 28rpx;
}
.index-shop-banner-text text{
  display: inline-block;
  padding: 0 20rpx 10rpx;
  border-bottom:2px solid rgb(220,213,209)
}
.index-shop-content{
  padding: 10rpx;
}
.index-shop-content-view{
  width: 360rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.index-shop-content-view:nth-of-type(2n){
  margin-right: 0rpx;
}
.index-shop-content-img{
  width: 100%;
  height: 300rpx;
  background: #000;
}
.index-shop-content-img image{
  height: 100%;
  width: 100%;
}
.index-shop-content-text{
  padding: 15rpx;
  border:1px solid #eeeeee;
  border-top: 0;
}
.index-shop-content-title{
  font-size: 28rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.index-shop-content-money{
  font-size: 24rpx;
  color: #ed2125;
}
.index-shop-content-hui{
  font-size: 24rpx;
  color: #f4a110;
}