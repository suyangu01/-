


/*买家收货信息  */
.affirm .take-info{
  background-color: #fff;
  padding: 20rpx 50rpx 30rpx 25rpx;
  display: flex;
  flex-direction: column;
}
.affirm .take-info .info{
  display: flex;
}
.affirm .take-info .take-icon image{
  width: 30rpx;
  height: 35rpx;
}

.affirm .consignee{
  margin-left: 20rpx;
}
.affirm .take-phone{
  flex: 1;
  text-align: right;
}
.affirm .take-site{
  margin-left: 50rpx;
  margin-top: 10rpx;
}

/*商品信息  */
.affirm .commodity-info{
  background-color: #f6f6f6;
  display: flex;
  position: relative;
}
.affirm .commodity-info .commodity-img image{
  width: 200rpx;
  height: 161rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
}
.affirm .commodity-info .texts{
  display: flex;
  flex-direction: column;
}
.affirm .commodity-info .commodity-title{
  font-size: 28rpx;
  margin-top: 32rpx;
}
.affirm .commodity-info .commodity-type{
  font-size: 20rpx;
  color: #4f4e4e;
  margin-top: 24rpx;
}
.affirm .commodity-info .commodity-price{
  font-size: 30rpx;
  color: #de0e0e;
  margin-top: 40rpx;
}
.affirm .commodity-info .commodity-quantity{
  font-size: 28rpx;
  color: #151515;
  position: absolute;
  right: 55rpx;
  bottom: 20rpx;
}

.affirm .payment{
  margin: 0 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
}

.affirm .payment .payment-text{
  font-size: 26rpx;
  color: #000;
  line-height: 98rpx;
}
.affirm .payment .payment-price{
  font-size: 26rpx;
  line-height: 98rpx;
  flex: 1;
  text-align: right;
}


/*买家留言  */
.affirm .message{
  margin: 0 30rpx 0 33rpx ;
  border-bottom: 2rpx solid #f2f2f2;
  /* display: flex; */
}
.message .message-box{
  display: flex;
}

.affirm .message .message-box .message-text{
  font-size: 28rpx;
  color: #000;
  line-height: 98rpx;
}

.message .message-box .message-input{
  margin: 24rpx 0 0 24rpx;
  width: 60%;
}
.message .message-box .message-input input{
  /* margin: 24rpx 0 0 24rpx; */
  font-size: 28rpx;
}
.placeholder-style{
  font-size: 28rpx;
  color: #a1a1a1;
}


.affirm .amount{
  font-size: 28rpx;
  display: flex;
  margin: 20rpx 0;
  position: relative;
}

.affirm .amount .commodity-amount{
  flex: 1;
  text-align: right;
  /* margin-right: 30rpx; */
}
.affirm .amount .price-amount{
  margin: 0 30rpx 0 30rpx;
}

.affirm .amount .member-price{
  font-size: 26rpx;
  color: #999999;
  position: absolute;
  top: 60rpx;
  right: 30rpx;
}

.footer{
  display: flex;
  position: fixed;
  bottom: 0;
  height: 96rpx;
  border-top: 1rpx solid #eeeeee;
  width: 100%;
}
.footer .total-price{
  font-size:  32rpx;
  line-height: 96rpx;
  width: 500rpx;
  text-align: right;
  padding-right: 40rpx;
}
.footer .submit-btn{
  font-size: 32rpx;
  background-color: #f5141b;
  color: #fff;
  flex: 1;
  text-align: center;
  line-height: 96rpx;
}
.red{
  color: #e93c40;
}





/*弹出窗口  */
.popup-box{
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 11;
}
.popup-box .popup{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  width: 500rpx;
  /* height: 340rpx;  */
  background-color: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  padding-bottom: 30rpx;
}
.popup .popup-title{
  font-size: 30rpx;
  color: #222;
  text-align: center;
  padding: 34rpx 0 36rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.popup .payment-modes{
  font-size: 30rpx;
  color: #222;
  padding: 0 20rpx;
}

.popup .payment-modes .payment-wx{
  padding: 40rpx 0 40rpx 36rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
  
}
.payment-modes .payment-wx .wx-icon{
  margin-right: 20rpx;
}
.payment-modes .payment-wx .wx-icon image{
  width: 40rpx;
  height: 40rpx;

}

.popup .payment-modes .payment-voucher{
  padding: 40rpx 0 40rpx 36rpx;
  display: flex;
}
.payment-modes .payment-voucher .voucher-icon{
  margin-right: 20rpx;
}

.payment-modes .payment-voucher .voucher-icon image{
  width: 38rpx;
  height: 32rpx;

}


.hidden{
  visibility: hidden;
}
.show{
  visibility: show;
}