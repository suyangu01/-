
page{
  background-color: #f2f2f2;
}

.logistics-info{

}
.logistics-info .info{
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  padding: 22rpx 0 20rpx 33rpx;
  line-height: 40rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.logistics-info .info .expressage-name{
  font-size: 28rpx;
}




.logistics-update{
  background-color: #fff;
  padding: 20rpx 60rpx 50rpx 110rpx;
  /* padding-top: 20rpx; */
  position: relative;
}
.logistics-update .update{
  border-bottom: 1rpx solid #f2f2f2;
  padding-bottom: 20rpx;
  margin-bottom: 20rpx;
  position: relative;
}
.logistics-update .border-left{
  width: 4rpx;
  height: 220rpx;
  background-color: #ccc;
  position: absolute;
  top: 50rpx;
  left: 65rpx;
  
}
.logistics-update .update .dot{
  position: absolute;
  top: 15rpx;
  left: -50rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
  background-color: #cccccc;
}
.logistics-update .update .update-text{
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 10rpx;

}
.logistics-update .update .update-time{
  font-size: 22rpx;
  color: #666666;
}
.red{
  color: #f5141b;
}

.dot-red{
  background-color: #f5141b;
}


.logistics_centent{
  display: flex;
  flex-direction: column;
  position: absolute;
  left: 100rpx;
  font-size: 28rpx;
  color: #666
}
.icon{
  width: 20rpx;
  height: 20rpx;
  background: white;
  border-radius: 50%;
  display: inline-block;
  margin:0rpx 20rpx 0rpx 40rpx;
}
.in{
  border: 1rpx solid red;
  animation: my_animation 2s infinite;
}
@keyframes my_animation{
    0%{
      transform: scale(1);
    }
    50%{
      transform: scale(1.2);
    }
    100% {  
    transform: scale(1.4);  
    background-color: transparent;  
    }  
}
 
.no_in{
  border: 1rpx solid #d0d0d0;
}
.on{
  background: #d0d0d0;
  height: 100rpx;
  width: 1px;
  margin-left: 50rpx;
}
