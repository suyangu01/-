/* pages/a/a.wxss */
/**index.wxss**/
/* page{
  overflow-y: hidden;
} */
.swiper-tab{
    width: 100%;
    border-bottom: 2rpx solid #777777;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
  }
.swiper-tab-list{  font-size: 30rpx;
    display: inline-block;
	width: 33.33%;
	color: #777777;
}
.on{ color: #da7c0c;
	border-bottom: 5rpx solid #da7c0c;}
 
.swiper-box{
   display: block; height: 100%; width: 100%;
   padding-top: 209rpx;
    box-sizing: border-box;
  }
swiper-item{overflow-y: auto;}
swiper-item::-webkit-scrollbar{display: none}

.index-sou{
  width: 590rpx;
  margin: 35rpx auto;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 5rpx;
  background: #f2f2f2;
  font-size: 24rpx;
  box-sizing: border-box;
  padding-left: 30rpx;
  position: relative;
}
.index-sou-icon{
  width: 36rpx;
  height: 36rpx;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right:27rpx;
}
.index-scroll{
  white-space: nowrap;
  padding: 0 20rpx;
  border-bottom: 1px solid #e5e5e5;
}
.index-scroll view{
  padding: 0 30rpx;
  height: 75rpx;
  line-height: 75rpx;
  box-sizing:border-box;
  display: inline-block;
  font-size: 26rpx;
  text-align: center;
}
.index-scroll-act{
  color: #f5141b;
  border-bottom: 2px solid #f5141b;
}
.slide-image{
  width: 100%;
  height: 400rpx;
}
.swiper {
  height: 400rpx;
}
.index-tui{
  padding: 12rpx;
  border-bottom:20rpx solid #f6f6f6;
}
.index-tui-l{
  width: 360rpx;
  height: 350rpx;
  background:#f2f6f8;
  padding: 32rpx;
  box-sizing:border-box;
  text-align: left;

}

.index-tui-r-top{
  width: 360rpx;
  height: 170rpx;
  background: #f8f5f2;
  margin-bottom: 10rpx;
  padding: 25rpx;
  box-sizing:border-box;
}
.index-tui-r-bottom{
  width: 360rpx;
  height: 170rpx;
  background:#f3eff7;
  padding: 25rpx;
  box-sizing:border-box;
}

.index-content{
  white-space: nowrap;
}
.index-content-view{
  width: 750rpx;
  display: inline-block;
}
.index-tui-title{
  font-size: 30rpx;
  margin-bottom: 28rpx;
}
.index-tui-time{
  font-size: 24rpx;
  color: #666;
}
.index-tui-time text{
  width: 38rpx;
  height: 38rpx;
  background:#000;
  color: #fff;
  margin:0 5rpx;
  display: inline-block;
  text-align: center;
}
.index-tui-time text:last-child{
  margin-right: 0rpx;
}
.index-tui-l-img{
  width: 127rpx;
  height: 147rpx;
  display: block;
  background: #000;
  margin: 0 auto;
  margin-top: 40rpx;
}
.index-tui-r-img{
  width: 100rpx;
  height: 120rpx;
  background: #000;
}
/*商品列表  */
.index-shop-banner{
  width: 100%;
  height: 240rpx;
  margin-top: 20rpx;
  position: relative;
}
.index-shop-banner image{
  width: 100%;
  height: 100%;
}
.index-shop-banner-text{
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translateX(-50%) translateY(-50%);
  padding: 33rpx;
  background: #fff;
  font-size: 28rpx;
}
.index-shop-banner-text text{
  display: inline-block;
  padding: 0 20rpx 10rpx;
  border-bottom:2px solid rgb(220,213,209)
}
.index-shop-content{
  padding: 10rpx;
}
.index-shop-content-view{
  width: 360rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.index-shop-content-view:nth-of-type(2n){
  margin-right: 0rpx;
}
.index-shop-content-img{
  width: 100%;
  height: 300rpx;
  background: #000;
}
.index-shop-content-img image{
  height: 100%;
  width: 100%;
}
.index-shop-content-text{
  padding: 15rpx;
  border:1px solid #eeeeee;
  border-top: 0;
}
.index-shop-content-title{
  font-size: 28rpx;
  width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.index-shop-content-money{
  font-size: 24rpx;
  color: #ed2125;
}
.index-shop-content-hui{
  font-size: 24rpx;
  color: #f4a110;
}