

.order-details .order-state{
  position: relative;
  height: 140rpx;
}

.order-details .order-state .bgm image{
  width: 100%;
  height: 140rpx;
}

.order-details .order-state .state-text{
  font-size: 28rpx;
  color: #fff;
  position: absolute;
  top: 0;
  left: 50rpx;
  line-height: 140rpx;
  /* z-index: 1; */
}


/*买家收货信息  */
.order-details .take-info{
  background-color: #fff;
  padding: 20rpx 50rpx 30rpx 25rpx;
  display: flex;
  flex-direction: column;
}
.order-details .take-info .info{
  display: flex;
}
.order-details .take-info .take-icon image{
  width: 30rpx;
  height: 35rpx;
}

.order-details .consignee{
  margin-left: 20rpx;
}
.order-details .take-phone{
  flex: 1;
  text-align: right;
}
.order-details .take-site{
  margin-left: 50rpx;
  margin-top: 10rpx;
}

/*商品信息  */
.order-details .commodity-info{
  background-color: #f6f6f6;
  display: flex;
  position: relative;
}
.order-details .commodity-info .commodity-img image{
  width: 200rpx;
  height: 161rpx;
  padding: 30rpx 30rpx 20rpx 30rpx;
}
.order-details .commodity-info .texts{
  display: flex;
  flex-direction: column;
}
.order-details .commodity-info .commodity-title{
  font-size: 28rpx;
  margin-top: 32rpx;
}
.order-details .commodity-info .commodity-type{
  font-size: 20rpx;
  color: #4f4e4e;
  margin-top: 24rpx;
}
.order-details .commodity-info .commodity-price{
  font-size: 30rpx;
  color: #de0e0e;
  margin-top: 40rpx;
}
.order-details .commodity-info .commodity-quantity{
  font-size: 28rpx;
  color: #151515;
  position: absolute;
  right: 55rpx;
  bottom: 20rpx;
}

.order-details .payment{
  margin: 0 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
  display: flex;
}

.order-details .payment .payment-text{
  font-size: 26rpx;
  color: #000;
  line-height: 98rpx;
}
.order-details .payment .payment-price{
  font-size: 26rpx;
  line-height: 98rpx;
  flex: 1;
  text-align: right;
}

/*按钮  */
.order-details .order-btn{
  height: 98rpx;
  font-size: 22rpx;
  color: #555555;
  display: flex;
  line-height: 50rpx;
  text-align: center;
  position: relative;
  border-bottom: 20rpx solid #f2f2f2;
}
.order-details .order-btn .examine-btn{
  border: 1rpx solid #a0a0a0;
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 178rpx;
}
.order-details .order-btn .notarize-btn{
  border: 1rpx solid #a0a0a0;
  width: 120rpx;
  height: 50rpx;
  position: absolute;
  top: 20rpx;
  right: 30rpx;
}


/*上传凭证  */
.order-details .voucher{
  padding: 30rpx;
  border-bottom: 20rpx solid #f2f2f2;
}
.order-details .voucher .voucher-title{
  font-size: 30rpx;
  margin-bottom: 20rpx;
}
.order-details .voucher .voucher-img image{
  width: 130rpx;
  height: 130rpx;
}


/*订单信息  */

.order-details .order-info{
  padding: 30rpx 30rpx 120rpx 30rpx;
  font-size: 26rpx;
  color: #999;
}

.order-details .order-info .order-text{
  margin-bottom: 20rpx;
}